@import '~antd/lib/style/themes/default.less';
.main { 
    min-height: 100%;
    background: url('../../assets/dimo_login_bg.jpg') center center no-repeat;
    background-size: cover;
    display: flex;
    // flex-direction: column;
    justify-content: center;
    align-items: center;
  .wrapper {
    width: 820px;
    display: flex;
    @media screen and (max-width: @screen-sm) {
      width: 80%;
    }
  }
  .main_left {
    width: 500px;
    padding: 80px 30px;
    box-sizing: border-box;
    background: rgba(0, 0, 0, 0.4);
    .welcome {
      color: #00c515;
      font-size: 38px;
      width: 390px;
      margin-bottom: 10px;
      border-bottom: 2px solid #00c515;
    }
    .depict {
      font-size: 24px;
      color: #fff;
      line-height: 40px;
    }
  }
  .main_right {
    width: 320px;
    padding: 0 10px;
    box-sizing: border-box;
    background: #fff;
    margin: 0 auto;
    @media screen and (max-width: @screen-sm) {
      width: 95%;
    }
    .icon {
      margin-left: 16px;
      color: rgba(0, 0, 0, 0.2);
      font-size: 24px;
      vertical-align: middle;
      cursor: pointer;
      transition: color 0.3s;

      &:hover {
        color: @primary-color;
      }
    }
  }
  .other {
    margin-top: 24px;
    line-height: 22px;
    text-align: left;

    .register {
      float: right;
    }
  }
}
:global{
  .antd-pro-layouts-user-layout-content{
    height: 100%;
  }
}