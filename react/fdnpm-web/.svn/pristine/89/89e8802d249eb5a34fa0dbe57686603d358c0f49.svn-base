              <td className={Styles.tableCellContent} colSpan={3}>{item.protectState}</td>
            </tr>
            <tr className={Styles.tableRow}>
              <td className={Styles.tableCell}>照片</td>
              <td className={Styles.tableCellContent} colSpan={3}>
                {
                  item.photoUrls && item.photoUrls.split(',').map((i) => (
                    <img src={i} key={i} style={{width:100,height:80,marginLeft:10}}/>
                  ))
                }
              </td>
            </tr>
            </tbody>
          </table>
