        title={title}
        visible={modalVisible}
        onOk={onCancelClick}
        onCancel={onCancelClick}
        width="800px"
        footer={false}
      >
        <div>
          <Row>
            <Divider dashed style={{ color: '#1a6636' }}>
              基本信息
            </Divider>
          </Row>
          <table className={Styles.table}>
            <tbody>
            <tr className={Styles.tableRow}>
              <td className={Styles.tableCell}>中文名</td>
              <td className={Styles.tableCell}>{item.chineseName}</td>
              <td className={Styles.tableCell}>学名</td>
              <td className={Styles.tableCell}>{item.standardName}</td>
            </tr>
            <tr className={Styles.tableRow}>
              <td className={Styles.tableCell}>英文名</td>
              <td className={Styles.tableCell}>{item.englishName}</td>
              <td className={Styles.tableCell}>俗名</td>
              <td className={Styles.tableCell}>{item.generalName}</td>
            </tr>
            <tr className={Styles.tableRow}>
              <td className={Styles.tableCell}>种属</td>
              <td className={Styles.tableCellContent} colSpan={3}>{item.genusCategory}</td>
            </tr>
            <tr className={Styles.tableRow}>
              <td className={Styles.tableCell}>中国保护级别</td>
              <td className={Styles.tableCell}>{item.chinaProtectRankName}</td>
              <td className={Styles.tableCell}>IUCN级别</td>
              <td className={Styles.tableCell}>{item.iucnRankName}</td>
            </tr>
            <tr className={Styles.tableRow}>
              <td className={Styles.tableCell}>物种简介</td>
              <td className={Styles.tableCellContent} colSpan={3}>{item.speciesShortDesc}</td>
            </tr>
